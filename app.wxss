@import "./styles/theme.wxss";
@import "./styles/common.wxss";

page {
  font-size: 30rpx;
  color: #222;
  line-height: 1.5;
  background: #efeff5;
  font-family: -apple-system,
                 "SF UI Text",
                 Roboto,
                 Noto,
                 "Helvetica Neue",
                 Helvetica,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "微软雅黑",
                 Arial,
                 sans-serif;
}

view {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 分享按钮 */

.share-btn {
  margin: 0;
  padding: 0;
  background: transparent;
  line-height: 1.5;
  border: none;
  text-align: left;
}

.share-btn::after {
  border: none;
}

/* 上面的样式通用可保留 */

/* 遮罩内容居中 */

.mask-body {
  display: flex;
  flex-direction: column;
  z-index: 10001;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  position: fixed;
  align-items: center;
  justify-content: center;
}

/* 条形盒子 */

.cell-list {
  background: #fff;
  padding: 0 32rpx;
}

.cell-list-title {
  color: #888;
  padding: 32rpx 32rpx 16rpx;
  background: #efeff5;
  line-height: 1;
  font-size: 26rpx;
}

.cell-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.cell {
  display: flex;
  align-items: center;
  min-height: 90rpx;
  background: #fff;
}

.cell-label {
  width: 160rpx;
}

/* 表单 */

.form-item {
  display: flex;
  align-items: center;
  height: 90rpx;
  padding: 0 32rpx;
  background: #fff;
}

.form-avatar {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
}
.form-label{
   width: 160rpx;
}
.form-img_tag {
  background: #e74d45;
  opacity: 0.7;
  width: 100%;
  height: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
   position: absolute;
  bottom: 0;
}
/* 底部固定 */

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

/* 头像 */

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 6rpx;
}

.avatar-sm {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  display: block;
}

/* 透明度 */

.opacity-5 {
  opacity: 0.5;
}

.logo {
  width: 260rpx;
  height: 120rpx;
  margin: 10rpx 245rpx;
}

/* 回到首页 */

.nav-box {
  position: fixed;
  top: 75vh;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx 0 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fefefe;
  font-size: 22rpx;
  z-index: 200;
}

/* 消息 */

.message-icon {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.r-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 6rpx;
}

.r-avatar-sm {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.tabbar-height {
  min-height: 110rpx;
  height: calc(110rpx + env(safe-area-inset-bottom) / 2);
}

.avatar-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
