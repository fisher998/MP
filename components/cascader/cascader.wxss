.ui-cascader {
  overflow: hidden;
  background-color: #F5F5F5;
  /* .cascader-name-item-wrap:last-of-type {
    border-bottom: 2px solid red;

  } */
}
.ui-cascader .cascader-name-wrap {
  background-color: white;
  position: relative;
  border-bottom: 1px solid #F5F5F5;
  height: 100rpx;
	overflow: hidden;
}
.ui-cascader .cascader-name-item-wrap {
  height: 100rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  float: left;
  text-align: center;
  line-height: 100rpx;
  color: black;
  border-bottom: 0px solid black;
}
.ui-cascader .cascader-item-border {
  border-bottom: 1px solid #F5F5F5;
}
.ui-cascader .cascader-name-item-wrap-clicked {
  color: #28c24c;
  /* border-bottom: 2px solid @theme-color; */
}
.ui-cascader .cascader-content-wrap {
  background-color: white;
  transition: 0.1s transform linear;
}
.ui-cascader .cascader-block {
  float: left;
  height: 500rpx;
}
.ui-cascader .cascader-block .cascader-block-item {
  height: 80rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  line-height: 80rpx;
}
.ui-cascader .cascader-block .cascader-block-item .cascader-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* display: inline; */
  /* width: 100%; */
  border-bottom: 1px solid #F5F5F5;
}
.ui-cascader .cascader-block .cascader-block-item .cascader-item-clicked {
  color: #28c24c;
}
