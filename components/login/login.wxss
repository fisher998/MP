.mask-body {
  display: flex;
  flex-direction: column;
  z-index: 10001;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border-radius: 3px;
  overflow: hidden;
  position: fixed;
  align-items: center;
  justify-content: center;
}

.auth-box {
  width: 600rpx;
  height: 380rpx;
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-img {
  width: 220rpx;
  height: 80rpx;
  margin-top: 60rpx;
}

.auth-text {
  margin: 40rpx 0;
  font-size: 32rpx;
}