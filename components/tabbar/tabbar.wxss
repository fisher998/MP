.tabbar-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  /* box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 0.05); */
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 999;
  font-size: 22rpx;
  border-top: 1px solid #f3f3f3;
  min-height: 110rpx;
  height: calc(110rpx + env(safe-area-inset-bottom) / 2);
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}


.tabbar-box-place {
 height: calc(110rpx + env(safe-area-inset-bottom) / 2);
}


.tabbar-box-item {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tabbar-box-item__img {
  width: 56rpx;
  height: 56rpx;
  margin: 0 0;
}

.tabbar-box-item__text {
  text-align: center;
  color: #838591;
  font-size: 22rpx;
  line-height: 1.5;
}
