.tag {
  display: inline-block;
  position: relative;
  box-sizing: border-box;
  line-height: 30rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  background: #efeff5;
  text-align: center;
  color: #888888;
  vertical-align: middle;
}

.tag::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx
}

.tag-primary {
  color: white;
  background: #28c24c
}
.tag-primary-plain{
  color: #28c24c;
  background: transparent
}
.tag-primary::after {
  border-color: #28c24c
}

