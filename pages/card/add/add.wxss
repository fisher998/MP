.head{
  display: flex;
  align-items: flex-start;
  padding: 0 0 0 32rpx;
  background: #fff;
}
.avatar-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  background: #b0b3c0;
  border-radius: 8rpx;
	margin-top: 32rpx;
	position: relative;
}
.avatar-box-base{
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
	/* margin-top: 32rpx; */
}
.avatar-base-text{
	position: absolute;
	background: rgba(0, 0, 0, 0.5);
	height: 50rpx;
	font-size: 24rpx;
	color: #fff;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 0 0 8rpx 8rpx;
}
.avatar-box-img{
  width: 73rpx;
  height: 64rpx;
}
.avatar-box-text{
  font-size: 24rpx;
  color: #fff;
  margin-top: 20rpx;
}
.textarea-box{
  background: #fff;
  padding: 32rpx;
}
textarea{
  width: auto;
  height: 250rpx;
  background: #fff;
  padding: 32rpx 32rpx 0 32rpx;
}
.textarea-normal{
 padding: 32rpx;
}
.textarea-ios{
  padding: 24rpx;
}

.auth-box{
	width: 600rpx;
	height: 380rpx;
	border-radius: 6rpx;
	background: #fff;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.auth-img{
	width: 220rpx;
	height: 80rpx;
	margin-top: 60rpx;
}
.auth-text{
  margin: 40rpx 0;
	font-size: 28rpx;
}
.scroll-x{
  white-space: nowrap;
  height: 150rpx;
}
.scroll-x-item{
  position: relative;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}
.scroll-x-item__img{
  width: 100%;
  height: 100%;
}
.del-image-box{
  position: absolute;
  top:0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, .5);
  color: white;
  line-height: 1;
}
.del-image{
  width: 14rpx;
  height: 14rpx;
}
