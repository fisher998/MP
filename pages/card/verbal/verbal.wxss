.label-1, .label-2{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}
.label-1__text, .label-2__text {
  display: inline-block;
  vertical-align: middle;
  width: 85%;
}

.label-1__icon {
  position: relative;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  background: #fcfff4;
}

.label-1__icon-checked {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
}

.label-2__icon {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  width: 18px;
  height: 18px;
  background: #d3d4c5;
  border-radius: 50px;
}

.label-2__icon-checked {
  position: absolute;
  left: 3px;
  top: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
  border-radius: 50%;
}

.label-4_text{
  text-align: center;
  margin-top: 15px;
}

.hf-radio {
  background: #ffffff;
}

.hf-textarea {
  box-sizing: border-box;
  width:100%;
  height:120rpx;
  border:1px solid #d5d5d5;
  border-radius:10rpx;
  padding: 15rpx;
}