<view class="ui-dialog-content">
  <view class="ui-dialog-body">
    <indexlist height="{{height}}" show-top data="{{list}}" bindcustomtap="singleselect" >
      <view class="top_box">
        <view class="top1">
          <text>当前：{{country||"成都市"}}</text>
        </view>
        <view>
          <view class="title">定位</view>
          <view class="position" bindtap="positionTap">
            <span type="home-map" color="#00ab48" class="ui-icon icon-home-map" style="color: #00ab48;font-size: 16px;"></span>
            {{position}}</view>
        </view>
        <view class="top2">
          <view class="title">热门城市</view>
          <tags data="{{tagsData}}" bindchange="singleTap" fixed-width col-number="4" ></tags>
        </view>
      </view>
    </indexlist>
  </view>
</view>