.cate-list{
	padding: 32rpx 32rpx 16rpx;
	background: #fff;
	display: flex;
	flex-wrap: wrap;
}
.cate-list-item{
	line-height: 80rpx;
	padding: 0 22rpx;
	border: 1px solid #d8d8d8;
	border-radius: 8rpx;
	display: inline-block;
	margin: 0 16rpx 16rpx 0;
	font-size: 26rpx;
	color: #888;
}
.cate-list-item--select{
	border: 1px solid #19a918;
	color: #19a918;
}
.avatar-box{
	width: 96rpx;
	height: 96rpx;
	border-radius: 6rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background: #f4f6f8;
	font-size: 24rpx;
	color: #888;
}