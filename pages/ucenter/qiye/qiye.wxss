
.qy-container{
	background:url(https://tongchengxiaodian.oss-cn-beijing.aliyuncs.com/qiyetest/uploads/picture/2018-11-22/5bf66ecbf1ebb.jpg) top center no-repeat;
	background-size: cover;
	width: 100vw;
	height: 100vh;
	padding-top: 212rpx;
}
.qy-item{
	display: flex;
	align-items: center;
	height: 80rpx;
	border-radius: 40rpx;
	margin: 32rpx 64rpx 0;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 1);
	background: rgba(244, 246, 248, 0.2);
	padding: 0 40rpx;
}
.qy-placeholder{
	color: rgba(255, 255, 255, 0.8);
}
.qiye-btn_submit{
	justify-content: center;
  color: rgba(34, 34, 34, 0.8);
	background: #fff;
	font-size: 28rpx;
}
.qiye-btn_call{
	justify-content: center;
	background: #fa593d;
	margin-top: 0;
	color: #fff;
	font-size: 28rpx;
}
.qiye-space{
  height: 128rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.5)
}