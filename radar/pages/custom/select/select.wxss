@import '../../../styles/common.wxss';
.search-box{
	background: white;
	flex:1;
	height: 110rpx;
	display: flex;
	align-items: center;
	padding: 0 35rpx;
	font-size: 30rpx;
}
.send-all{
	height: 100rpx;
	display: flex;
	align-items: center;
	padding: 0 35rpx;
	background: #fff;
}
.select-list{
	white-space: nowrap;
	height: 110rpx;
	background: #fff;
	width: auto;
	max-width: 580rpx;
}
.select-item{
	position: relative;
	display: inline-block;
	width: 60rpx;
	height: 60rpx;
	margin: 25rpx 10rpx 25rpx 0;
	border-radius: 5rpx;
	overflow: hidden;
}
.select-item:nth-child(1){
	margin-left: 35rpx;
}
.select-item:last-child{
	margin-right: 35rpx;
}
.select-item_img{
	width: 100%;
	height: 100%;
}

.tagx-list{
	white-space: nowrap;
	height: 100rpx;
	background: #fff;
	overflow: hidden;
	padding: 0 35rpx;
	flex:1;
}
.tagx-item{
	position: relative;
	width: 150rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	display: inline-block;
	border-radius: 5rpx;
	font-size: 24rpx;
	color: #969696;
	margin-top: 25rpx;
	margin-right: 20rpx;
}
.tagx-item:nth-child(1){
	margin-left: 0rpx;
}
.tagx-item:last-child{
	margin-right: 0rpx;
}
.tagx-item:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 200%;
  border: 1px solid #e6e6e6;
  color: #e6e6e6;
  height: 200%;
  transform-origin: left top;
  transform: scale(0.5);
  box-sizing: border-box;
  border-radius: 10rpx;
}
.tagx-item--selected{
	background: #21bf34;
	color: #fff;
}
.tagx-item--selected::before{
	border:none;
}
.tag-more{
	width: 100rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #fff;
}

.tagy-list{
	display: flex;
	flex-wrap: wrap;
	background: #fff;
	padding:0 35rpx;
}
.tagy-item{
	position: relative;
	width: 150rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	display: inline-block;
	border-radius: 5rpx;
	font-size: 24rpx;
	color: #969696;
	margin-bottom: 25rpx;
	margin-right: 26rpx;
}
.tagy-item:nth-child(4n){
	margin-right: 0;
}
.tagy-item:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 200%;
  border: 1px solid #e6e6e6;
  color: #e6e6e6;
  height: 200%;
  transform-origin: left top;
  transform: scale(0.5);
  box-sizing: border-box;
  border-radius: 10rpx;
}
.tagy-item--selected{
	background: #21bf34;
	color: #fff;
}
.tagy-item--selected::before{
	border:none;
}